{% extends 'base.html.twig' %}

{% block title %}Chasse{% endblock %}

{% block body %}
 {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  float : left; 
  margin-left : 50px;
  margin-top:20px;
  height : 320px;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>

<div class="example-wrapper">
    <h1 style="text-align:center;">Choissisez un lieu de chasse</h1>

   

      {% for l in localisations %}
  <form method="post" action="{{ path('resultat_capture') }}">
 <div class="card" style="width: 18rem;">
  <img class="card-img-top" height="360"  src="{{ l.image }}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{ l.libelle }}</h5>
    <p class="card-text"> </p>
    <input type="hidden" name="id_localisation" value="{{ l.id }}" />
    <input type="hidden" name="id_pokemon" value="{{ id_pokemon }}" />
    <input type="submit" class="btn btn-primary" value="Capturer" />
  </div>
</div>
</form>
  {% endfor %}
</div>

 
{% endblock %}
