{% extends 'base.html.twig' %}

{% block title %}Entraînement des pokemons{% endblock %}

{% block body %}
 {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
  float : left; 
  margin-left : 50px;
      height : 450px;
    margin-top:10px;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>

<div class="example-wrapper">
    <h1>Choissisez un pokémon à entrainer</h1>

    <p> Vous avez {{ nbPokemons}} pokémons</p>



      {% for p in pokemons %}
<form method="post" action="{{ path('app_detail') }}">
 <div class="card" style="width: 18rem;">
  <img class="card-img-top" height="300" src="{{ p.espece.getimage }}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{ p.nom }}</h5>
    <p class="card-text">Niveau {{ p.niveau }}</p>
    <input name="id_du_pokemon" type="hidden" value="{{ p.id }}">
    <input class="btn btn-primary" type="submit" value="Voir la fiche du pokémon"/>
  </div>
</div>
</form>
  {% endfor %}
</div>

 


   
    

{% endblock %}
